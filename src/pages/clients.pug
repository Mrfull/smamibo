                    var items = ["Имя", "Фамилия", "Адрес", "Телефон", "Дата рождения", "Группа", "Изменить", "Удалить", "Активный"]
                each item in items
                    th=item
            -
                var items = [
                    {
                        name: 'Имя 1',
                        surname: 'Фамилия 1 ',
                        address: 'Город, улица, номер дома, квартира',
                        phone: '+38-(012)-123-45-67',
