                    },
                    {
                        icon: '<i class="fas fa-shopping-cart"></i>',
                        title: 'Новых заказов',
                        stat_today: 'Кол-во | Сумма ',
                        stat_week: 'Кол-во | Сумма ',
                        stat_month: 'Кол-во | Сумма ',
                        stat_year: 'Кол-во | Сумма '
                    },
                    {
                        icon: '<i class="fas fa-strikethrough"></i>',
                        title: 'Брошеных заказов',
